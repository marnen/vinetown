<h1><%= @user.first_name + " " + @user.last_name %></h1>
<% if @user.id == session[:user_id] %>
<div class="box"><%= link_to "View", :action => :profile, :params => { :id => session[:user_id] }%></div>
<% end %>
<%= render :partial => "partials/profile_nav.html.erb" %>
<div class="colorback">
	<%= image_tag "cup.png", :class => "profile_picture"%>
<table class="formtable">
	<% form_for :user, @user do |f| %>
		<% if @user.date_of_birth
			value = @user.date_of_birth.strftime("%m/%d/%Y")
		else
			value = "mm/dd/yyyy"
		end
			%>
		<tr><td><% if flash[:error] %><p class="flash notice"><%= flash[:error] %></p><br /><% end %>
        </td></tr>
		<tr>
			<td>
				<%= f.label :date_of_birth %>*<br />
				<%= f.text_field :date_of_birth, :value => value %>
			</td>
			<td>
				<%= f.label :gender %><br />
				<%= f.text_field :gender %>
			</td>
		</tr>
		<tr>
			<td>
				Current <%= f.label :hometown %><br />
				<%= f.text_field :hometown %>
			</td>
			<td>
				<%= f.label :state %><br />
				<%= f.text_field :state %>
			</td>
		</tr>
		<tr>
			<td>
				<%= f.label :country %><br />
				<%= f.text_field :country %>
			</td>
			<td>
				<%= f.label :status %><br />
				<%= f.text_field :status %>
			</td>
		</tr>
		
		<tr>
			<td>
				<%= f.label :interests %><br />
				<%= f.text_area :interests, :class => "hundredpx" %>
			</td>		
		</tr>
		<tr>
			<td>
				<%= f.label :favorite_wines %><br />
				<%= f.text_area :favorite_wines, :class => "hundredpx" %>
			</td>
		</tr>
		<tr>
			<td>
				<%= f.label :favorite_food_and_wine_pairings %><br />
				<%= f.text_area :favorite_food_and_wine_pairings, :class => "hundredpx" %>
			</td>
		</tr>
	
		
		<tr><td><%= f.submit "Save changes" %><br /></td></tr>
		* Required; must be 21 years of age or older.
	<% end %>
</table>
</div>



