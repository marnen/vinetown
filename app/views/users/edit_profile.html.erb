<h1 style="margin-bottom:2px"><%= @user.first_name + " " + @user.last_name %></h1>
<% form_for :user_status, @status do |f| %>
What are you up to? <span class="status"><%= f.text_field :status %></span><span class="box">&nbsp;<%= f.submit "Update"%></span>
<% end %>
<% if @user.id == session[:user_id] %>
<div class="box"><%= link_to "View", :action => :profile, :params => { :id => session[:user_id] }%></div>
<% end %>
<%= render :partial => "partials/profile_nav.html.erb" %>
<div class="colorback">	
	<%= image_tag "cup.png", :class => "profile_picture"%>
<table class="formtable">
	<% form_for :user, @user do |f| %>
		<tr><td><% if flash[:error] %><p class="flash notice"><%= flash[:error] %></p><br /><% end %>
        </td></tr>
		<tr>
			<td>
				Email<br />
				<div class="noedit"><%= @user.email %></div>
			</td>
			<td>
			</td>
		</tr>
		<tr>
			<td>
				New Password<br />
			    <input id="user_password" name="user[password]" size="30" type="password" value="" />
			</td>
			<td>
				Confirm New Password<br />
			    <input id="user_password_confirm" name="user[password_confirm]" size="30" type="password" value="" />
			</td>
		</tr>
		<tr>
			<td>
				First Name<br />
				<%= f.text_field :first_name %>
			</td>
			<td>
				Last Name<br />
				<%= f.text_field :last_name %>
			</td>
		</tr>
		<tr><td><div class="box"><%= f.submit "Save changes" %></div></td></tr>
	<% end %>
</table>
</div>
