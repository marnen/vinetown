<h1><%=h @post.name%></h1>
<div class="colorback">
<span class="timetext"><%= @post.created_at.strftime("%I:%M %p on %a %b %d %Y") %></span><br /><br />
<%=h @post.body%>
<h4>Comments</h4>
<%= link_to "Add Comment", :action => :comment, :params => { :post => { :id => @post.id }}%><br /><br />
<div class="commenttext">
<%= render (:partial => "partials/comment.html.erb", :object => "0" )%>
</div>
</div>
