%>

h1, h2, h3, h4, h5, h6 {
	font-weight:bold;
	font-family:"Palatino Linotype", "Book Antiqua", "Palatino", serif;
	/*font-family:"Georgia", serif;*/
}

h2 {
	color:<%=@color["plum"]%>;line-height:0px;margin-top:20px;
}

h4 {
	margin:10px 0 10px ;
}

h3 {
	margin-bottom:5px;
}

h1 { color: <%=@color["darkgreen"]%>;border-bottom:3px <%= @color["plum"] %> solid; padding-bottom:10px; }

h5 { font-size:28px; color: <%=@color["darkgreen"]%>;border-bottom:3px <%= @color["plum"] %> solid; padding-bottom:10px;line-height:12px;margin-top:20px;margin-bottom:5px;}

hr {
	color:<%=@color["plum"]%>;
}

div {
	margin:0px;
	padding:0px;
}

body { background-color: <%=@color["champagne"]%>; background-image: url(../images/Grapes_during_pigmentation.jpg) no-repeat;
	font-family: arial, helvetica, sans-serif;
	font-size:   18px;
	line-height: 18px;
	
}

input, textarea {
	font-family: arial, helvetica, sans-serif;
	font-size:   18px;
	border: 1px <%= @color["plum"] %> solid ;
	background: <%= @color["champagne"] %> ;

}

textarea {
	height:200px;
}

p, ol, ul, td {
  font-family: arial, helvetica, sans-serif;
  font-size:   18px;
  line-height: 18px;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}

a { color: <%= @color["green"] %>; text-decoration:none;  }
a img {border:0;}

a:hover { color: <%= @color["darkgreen"] %> ; }

.fieldWithErrors {
  padding: 2px;
  background-color: red;
  display: table;
}

#errorExplanation {
  width: 400px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#errorExplanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  background-color: #c00;
  color: #fff;
}

#errorExplanation p {
  color: #333;
  margin-bottom: 0;
  padding: 5px;
}
	            </div>
#errorExplanation ul li {
  font-size: 12px;
  list-style: square;
}

table {width:;border-spacing:0;}
th {text-align:left;}
td {padding:2px 2px 2px 10px;}

/* Main Page Divs*/
#page{color:<%= @color["black"] %>;width:1000px;margin:auto;}
#header{text-align:center;}
#mainwrapper{border-left:<%=@border_size%>px <%=@color["darkgreen"] %> solid;border-right:<%=@border_size%>px <%=@color["darkgreen"] %> solid;padding-bottom:20px;}
#main{width:950px;margin:auto;}
#footer{height:60px;background-color:<%= @color["plum"] %>; color: <%= @color["champagne"]%>; border-top:<%=@border_size%>px <%= @color["darkgreen"] %> solid; text-align:center;}
#login_box{text-align:right;float:right;margin-right:3px;}
#logo {text-align:center;}
#logo a{color: <%= @color["plum"] %>; font-size:4em;line-height:1em;margin-top:2px;}
#pageback {background:url("../images/bgcolor.png");}
#nav{height:30px; color: white; border-bottom:<%=@border_size%>px <%= @color["darkgreen"] %> solid; text-align:left; vertical-align: top;}
#subnav{ border-bottom:2px <%= @color["darkgreen"] %> solid;}

.nav a{ font-size:18px; color: <%= @color["champagne"] %>;	height:50px;}
.nav a:hover{color:<%= @color["champagne"] %>;background-color:<%= @color["darkgreen"]%>;}
.nav ul{
	float:left;
	list-style-type:none;
	margin:-10px 0 0 30px;
	padding:0;
	background:<%= @color["plum"] %>;
	position:relative;
	top:10px;
} 

.nav ul li {
	margin-right: 10px;
	float:left;
	/*background:url(../images/nav_tab_left_g.gif) no-repeat;*/
}

.nav ul li a {
	height:30px;
	line-height: 30px;
	padding-left: 10px;
	padding-right: 10px;
	font-size:16px;
	float:left;
	/*background:url(../images/nav_tab_right_g.gif) no-repeat;background-position: 100% 0%;*/
}

/* Classes */
.nb a {background-color:<%= @color["darkgreen"] %>; }
.neighborhood { border-right: 5px <%= @color["darkgreen"] %> solid; border-left: 5px <%= @color["darkgreen"] %> solid; border-bottom: 0px <%= @color["darkgreen"] %> solid ;}
.colorback {background-color:<%= @color["gray"] %>; padding:15px;border:3px <%= @color["darkgreen"] %> solid;}
.teal {}
.chart{padding:3px;border:3px <%= @color["black"] %> solid; background:white;float:left;width:612px;margin-right:8px;}
.clearer{clear:both;}
.csssucks table{padding:0px;margin:0px;}
.csssucks td{border:1px solid black;}
.zebra{background-color:<%= @color["champagne"] %>;}
.formtable{color:<%= @color["black"] %>;}
.bar{height:30px;background-color:<%= @color["plum"]%>;}
.profile_picture{border:2px solid <%= @color["black"]%>;}
.noedit{background-color:white; padding:2px; width:98.5%; border-right:4px solid <%= @color["gray"]%> }
.hundredpx {height:100px;}
.highlight{color:<%=@color["newgreen"]%>;font-family:"Palatino Linotype", "Book Antiqua", "Palatino", serif;font-weight:100;font-size:1.3em;}
.headline{text-align:center;margin-top:0;color:<%=@color["darkgreen"]%>;}
.timetext{font-size:10px;}
.commenttext{font-size:13px;}
.commentbox textarea {height:100px;}
.comment{border:1px dotted white;background-color:<%=@color["champagne"]%>; padding:10px;}
.commentdiv{padding:10px 0px 0px 0px}
.indent{margin-left:30px;}
.flash {line-height:0px;background:<%=@color["gray"]%>;padding:20px;border:3px <%=@color["green"]%> solid ;}
.box {margin-top:-20px;}
.colorback .box {margin-top:0px;}
.box a{padding:10px; background-color:<%= @color["champagne"] %>;margin:10px;line-height:4em;border:2px <%= @color["darkgreen"] %> solid;}
.box a:hover{border:2px <%= @color["plum"] %> solid; background-image:url(../images/stripe.png);background-repeat:repeat-x;}
.box input{padding:2px; background-color:<%= @color["champagne"] %>;margin:0px;line-height:2em;border:2px <%= @color["darkgreen"] %> solid;}
.status input{width:703px;} 
.home{width:50%;vertical-align:top;}
.borderleft{background-image:url("../images/left_border.png");float:left;width:100px;height:500px;position:absolute;top:0;left:0;}
.borderright{background-image:url("../images/right_border.png");float:right;width:100px;height:500px;position:absolute;top:0;right:0;}
.ztable {width: 100%;}
.hidden {display:none;}
.sp a{color:<%= @color["plum"] %>;}
.sp a:hover{color:<%= @color["darkgreen"] %>;}
