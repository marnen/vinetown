<% @count = 0 %>
<h1><%=h @group.name%></h1>
<div class="box">
<% unless @member %>
	<%= link_to "Join Group", :action => :join_group, :params => { :group_id => @group.id }%>
<% else %>
	You are a member of this group<br />
<% end %>
<% if @admin %>
	<%= link_to "Edit Group", :action => :edit, :params => { :id => @group.id }%>
<% end %>
</div>
<div class="colorback">
<%= @group.description %>
<h2>Members</h2>
<table class="ztable">
<% for user in @group.users %>
	
<% @count+=1 %><% if @count%2 == 0 %><tr><% else %><tr class="zebra"><% end %><td><%= link_to user.username, :controller => :users, :action => :profile, :params => { :id => user.user_id } %></td></tr>

<% end %>
</table>
<h2>Recent Posts</h2>
<%= render :partial => "partials/poster.html.erb", :locals => { :posts => @posts } %>
</div>
